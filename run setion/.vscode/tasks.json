    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "scp",
            "args": [
                "${file}",
                "alongkot@10.35.130.66:/home/alongkot/${fileBasename}"
            ],
            "group": "build",
            "problemMatcher": [],
