{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "scp",
            "args": [
                "${file}",
                "alongkot@192.168.137.22:/home/alongkot/${fileBasename}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Copy file to Raspberry Pi"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "ssh",
            "args": [
                "alongkot@192.168.137.22",
                "gcc -o /home/alongkot/${fileBasenameNoExtension} /home/alongkot/${fileBasename}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "build",
            "detail": "Compile on Raspberry Pi"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "ssh",
            "args": [
                "alongkot@192.168.137.22",
                "/home/alongkot/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "compile",
            "detail": "Run on Raspberry Pi"
        }
    ]
}
